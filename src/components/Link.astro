---
const { text = "View Project", primaryColor = "#EA5E02", className = "", link = "#" } = Astro.props;
---

<a
  href={link}
  target="_self"
  class={`group relative inline-flex w-fit items-center justify-center rounded-full border-none bg-transparent text-sm font-semibold overflow-hidden transition-all duration-500 ease-out hover:shadow-sm ${className}`}
>
  <!-- ðŸ”µ Animated Arrow Background -->
  <div
    class="absolute left-0 top-1/2 -translate-y-1/2 flex h-[32px] w-[32px] items-center justify-center rounded-full transition-all duration-500 ease-in-out group-hover:w-full"
    style={`background-color: ${primaryColor};`}
  >
    <span class="text-white transition-transform duration-500 ease-out group-hover:translate-x-[calc(100%+45px)]">
      <svg xmlns="http://www.w3.org/2000/svg" width="14" height="14" fill="none"
        viewBox="0 0 24 24" stroke="currentColor" stroke-width="2">
        <path stroke-linecap="round" stroke-linejoin="round" d="M5 12h14m-7-7l7 7-7 7" />
      </svg>
    </span>
  </div>

  <!-- ðŸŸ£ Text -->
  <span class="relative z-10 px-6 py-[10px] mx-4 font-semibold text-secondary-50 transition-all duration-300 ease-in-out group-hover:text-white whitespace-nowrap">
    {text}
  </span>
</a>
