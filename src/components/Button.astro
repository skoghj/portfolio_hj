  textColor = "black",            // ê¸°ë³¸ í…ìŠ¤íŠ¸ ìƒ‰
  hoverTextColor = "white",       // hover ì‹œ í…ìŠ¤íŠ¸ ìƒ‰
  link = "#", 
  className = ""
} = Astro.props;
---

<style>
/* ë¬¼ê²° ìì²´ê°€ ì¢Œìš°ë¡œ ì›€ì§ì´ëŠ” íŒŒë„ */
@keyframes waveMotion {
  0% { transform: translateX(0); }
  100% { transform: translateX(-50%); }
}

/* ë¬¼ê²° ì „ì²´ê°€ ìœ„ë¡œ ì°¨ì˜¤ë¥´ëŠ” ìƒìŠ¹ ì• ë‹ˆë©”ì´ì…˜ */
@keyframes waveRise {
  0% { transform: translateY(100%); }
